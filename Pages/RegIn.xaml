<Page x:Class="RegIN.Pages.RegIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800" 
      Title="RegIn">

    <Grid>
        <materialDesign:Card
            Height="434"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="308">
            <Grid>
                <Image
                    x:Name="IUser"
                    HorizontalAlignment="Center"
                    Height="100"
                    Margin="32"
                    VerticalAlignment="Top"
                    Width="100"
                    Source="/Images/ic-user.png"
                    MouseDown="SelectImage">
                    <Image.Clip>
                        <EllipseGeometry
                            RadiusX="50"
                            RadiusY="50"
                            Center="50,50"/>
                    </Image.Clip>
                </Image>
                <Label
                    x:Name="lNameUser"
                    Margin="18,137,10,0"
                    HorizontalContentAlignment="Center"
                    Content=""
                    VerticalAlignment="Top"/>
                <Label
                    Content="Enter login:"
                    Margin="18,161,10,0"
                    VerticalAlignment="Top"/>
                <TextBox
                    x:Name="TbLogin"
                    Height="23"
                    Margin="18,185,10,0"
                    TextWrapping="Wrap"
                    Text=""
                    VerticalAlignment="Top"
                    KeyDown="SetLogin"
                    LostFocus="SetLogin"/>
                <Label
                    Content="Enter name:"
                    Margin="18,213,10,0"
                    VerticalAlignment="Top"/>
                <TextBox
                    x:Name="TbName"
                    Height="22"
                    Margin="18,237,10,0"
                    TextWrapping="Wrap"
                    Text=""
                    VerticalAlignment="Top"
                    PreviewTextInput="SetName"/>
                <Label
                    Content="Enter password:"
                    Margin="18,265,10,0"
                    VerticalAlignment="Top"/>
                <PasswordBox
                    x:Name="PbPassword"
                    Margin="18,289,10,0"
                    VerticalAlignment="Top"
                    Height="26"
                    KeyDown="SetPassword"
                    LostFocus="SetPassword"/>
                <Label
                    Content="Confirm the password:"
                    Margin="18,320,10,0"
                    VerticalAlignment="Top"/>
                <PasswordBox
                    x:Name="PbConfirmPassword"
                    Margin="18,344,10,0"
                    VerticalAlignment="Top"
                    Height="26"
                    KeyDown="ConfirmPassword"
                    LostFocus="ConfirmPassword"/>
                <Label
                    Content="Back"
                    Margin="18,373,10,0"
                    VerticalAlignment="Top"
                    Foreground="#FF673A07"
                    FontSize="10"
                    MouseDown="OpenLogin"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>